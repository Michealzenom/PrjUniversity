@model ModelPr.ModelViews.ResetPassword

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style type="text/css">
    .mainnav {
        opacity: unset;
        background-color: #034EA2;
    }

    form {
        width: 100%;
    }
</style>
<title>Forgot Password</title>

<div class="container row" style="width:500px;margin:5% auto auto auto;">
    @using (Html.BeginForm("ResetPass", "Account", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="card box-shadow" style="padding:15px">
            <div class="card-header text-center" style="border-radius:5px">
                <h3>Forgot Password</h3>
            </div>
            <div class="card-body" style="margin-bottom:10px">
                <div>
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                </div>
                <div class="input-group input-group-lg" style="margin-bottom:20px">
                    <span class="input-group-addon" id="sizing-addon1"><span class="fa fa-desktop"></span></span>
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = "Email" })
                </div>

                <div class="form-group" style="">
                    <input type="submit" class="form-control btn-primary" value="Get Reset Link" />
                </div>
            </div>
        </div>
    }
</div>

