@model UniversityDao.EF.IdeaCategory
@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/QAManager/Views/Shared/_Layout.cshtml";
}

<script src="~/CustomStyle/ckfinder/help/kendo.all.min.js"></script>
<link rel="stylesheet" href="https://kendo.cdn.telerik.com/2017.3.1026/styles/kendo.common-material.min.css" />
<link rel="stylesheet" href="https://kendo.cdn.telerik.com/2017.3.1026/styles/kendo.material.min.css" />
<link rel="stylesheet" href="https://kendo.cdn.telerik.com/2017.3.1026/styles/kendo.material.mobile.min.css" />
<div class="container">
    @using (Html.BeginForm("Update", "IdeaCategory", FormMethod.Post))
    {
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        <div class="card">
            <div class="card-header" style="background-color:white">
                <h4>Updating Idea category</h4>
            </div>
            <div class="card-body">
                @Html.HiddenFor(m => m.IdeaCategoryID)
                <div class="form-group">
                    @Html.TextBoxFor(m => m.CategoryName, new { @class = "form-control", @placeholder = "Category name" })
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.CategoryDescription, new { @class = "form-control", @placeholder = "Description" })
                </div>
                <div class="form-group">
                    @Html.DropDownList("GroupCateIdea", null, " -- Please choose group -- ", new { @class = "form-control", id = "ddlGr" })
                </div>

                <div class="form-group">
                    <label>Close date: </label>
                    <input id="datepicker" value="@Model.FinalCloseDate.ToString("dd/MM/yyyy")" title="datepicker" style="width:100%" />
                    @Html.HiddenFor(m => m.FinalCloseDate, new { @id = "choosedate" })
                </div>
                <div class="form-group">
                    <label class="custom-control custom-checkbox mb-2 mr-sm-2 mb-sm-0">
                        @Html.CheckBoxFor(m => m.IdeaCateStatus, new { @class = "custom-control-input" })
                        <span class="custom-control-indicator"></span>
                        <span class="custom-control-description">Status</span>
                    </label>
                </div>
            </div>
            <div class="card-footer">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </div>

    }
</div>
<script>
    // mark the first option as selected
    $(document).ready(function () {
        $("#ddlGr option:first").attr('disabled', 'disabled');
        $("#datepicker").kendoDatePicker({format:"dd/MM/yyyy"});
        $("#datepicker").change(function () {
            var date = $("#datepicker").val()
            $("#choosedate").val(date)
        })
    })

</script>
